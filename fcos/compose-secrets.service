[Unit]
Description=Load Secrets for docker-compose using Podman on docker.socket
Wants=network-online.target
After=network-online.target
ConditionPathExists=/var/local/environment/secrets_import.env

[Service]
Type=oneshot
RemainAfterExit=yes
EnvironmentFile=/var/local/environment/secrets_import.env
ExecStart=true

[Install]
WantedBy=multi-user.target
